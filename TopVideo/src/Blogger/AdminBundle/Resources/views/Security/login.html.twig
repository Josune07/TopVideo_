{# src/Blogger/AdminBundle/Resources/views/Security/login.html.twig #}



<!DOCTYPE html>
<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <title>{% block title %}symblog{% endblock %} - symblog</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
           <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
           
            <link href="https://fonts.googleapis.com/css?family=Saira+Semi+Condensed:300" rel="stylesheet">
             <link href="{{ asset('css/screen_7.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>

        <section id="wrapper">

            <header id="header">
            	<hgroup>
                    <h2>{% block blog_title %}<a href="#">TòpVideo</a>{% endblock %}</h2>
                    <h3>{% block blog_tagline %}<a href="#">Bienvenido a mi blog!</a>{% endblock %}</h3>
                </hgroup>
            </header>

         	<section class="main-col">
                {% block body %}
                	{% if error %}
						<div>{{ error.message }}</div>
					{% endif %}
						<form action="{{ path('blogger_admin_login_check') }}" method="post"  class="login">
						<label for="username">Usuario:</label>
						<input type="text" id="username" name="_username" value="{{ last_username }}" />

						<label for="password">Contrase�a:</label>
						<input type="password" id="password" name="_password" />

						<button type="submit">Entrar</button>

					</form>


                {% endblock %}
            </section>

             <div id="footer">
                {% block footer %}
                    Blog en Symfony2 - creado por <a href="">Josune Ordoñez</a>.
                {% endblock %}
            </div>
        </section>

       {% block javascripts %}{% endblock %}

    </body>
</html>
